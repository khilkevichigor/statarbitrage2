<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    
    <!-- Консольный аппендер (как раньше) -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%15.15t] %-5p %-40.40logger{39} : %m%n</pattern>
        </encoder>
    </appender>

    <!-- Файловый аппендер с ротацией по дням в папке core/logs -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%15.15t] %-5p %-40.40logger{39} : %m%n</pattern>
        </encoder>
        
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- Имя файла с датой в папке core/logs -->
            <fileNamePattern>core/logs/core-%d{yyyy-MM-dd}.log</fileNamePattern>
            <!-- Максимальное количество файлов (30 дней) -->
            <maxHistory>30</maxHistory>
            <!-- Удаление старых файлов при превышении лимита -->
            <cleanHistoryOnStart>true</cleanHistoryOnStart>
            <!-- Максимальный размер всех архивных файлов -->
            <totalSizeCap>10GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- Корневой логгер - пишет и в консоль, и в файл -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />
    </root>

    <!-- Настройки для пакета core -->
    <logger name="com.example.core" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />
    </logger>

</configuration>